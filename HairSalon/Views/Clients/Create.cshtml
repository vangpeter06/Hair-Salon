@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Add A New Client</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Name:")
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.PhoneNumber, "Phone Number:")
  @Html.TextBoxFor(model => model.PhoneNumber)
  @Html.LabelFor(model => model.StyleHair, "What do you want to do today?")
  @Html.TextBoxFor(model => model.StyleHair)
  @Html.LabelFor(model => model.Stylist, "Stylist Name:")
  @Html.DropDownList("StylistId")

  <input type="submit" value="addNewClient" class="btn-default" />

}

<p>@Html.ActionLink("Show All Clients", "Index")</p>