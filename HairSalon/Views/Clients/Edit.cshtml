@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h2>Edit Client:@Html.DisplayFor(model => model.Name)</h2>

<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model =>model.ClientId)

  @Html.LabelFor(model => model.Name, "Name:")
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.PhoneNumber, "Phone Number:")
  @Html.EditorFor(model => model.PhoneNumber)

  @Html.LabelFor(model => model.StyleHair, "Style Hair:")
  @Html.EditorFor(model => model.StyleHair)

  @Html.LabelFor(model => model.Stylist, "Stylist Name:")
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to all Clients", "Index")</p>