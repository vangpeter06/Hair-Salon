@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model Lisr<HairSalon.Models.Client>

  <h2>Client List</h2>

  if(@Model.Count == 0) 
  {
    <h2>No Clients have been added yet!</h2>
  }

  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId})</li>
    }
  </ul>

  <p>@Html.ActionLink("Add new Client", "Create")</p>
  <p>@Html.ActionLink("Back to Home", "Index", "Home")</p>